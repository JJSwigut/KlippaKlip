CREATE TABLE IF NOT EXISTS  KlipEntity (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT,
    itemText TEXT NOT NULL,
    isPinned INTEGER NOT NULL DEFAULT 0 -- 0 for false, 1 for true
);

insertKlipEntity:
INSERT INTO KlipEntity(title, itemText, isPinned)
VALUES (?, ?, ?);

selectAllKlipEntities:
SELECT * FROM KlipEntity;

deleteKlipEntity:
DELETE FROM KlipEntity
WHERE id = ?;

updateKlipEntityIsPinned:
UPDATE KlipEntity
SET isPinned = ?
WHERE id = ?;